---
import { formatCurrency } from '../utils/formatters';

const { sales } = Astro.props;
---

<div class="mt-8 flow-root">
  <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Nombre del Cliente</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">URL del Sitio Web</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Monto</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Fecha de Venta</th>
              <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                <span class="sr-only">Editar</span>
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            {sales.map((sale: { clientName: unknown; websiteUrl: unknown; amount: number; saleDate: string | number | Date; id: any; }) => (
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">{sale.clientName}</td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{sale.websiteUrl}</td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{formatCurrency(sale.amount)}</td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{new Date(sale.saleDate).toLocaleDateString()}</td>
                <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                  <a href={`/edit/${sale.id}`} class="text-indigo-600 hover:text-indigo-900">Editar</a>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>